<div class="container">
  <main class="form-signin">
    <h1 class="h3 mb-3 fw-normal">Log in</h1>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="mb-3">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email", :type =>'email', :class => 'form-control', :placeholder => 'name@example.com' %>
  </div>

  <div class="mb-3">
    <%= f.label :password %><br />
    <%= f.password_field :password, autocomplete: "current-password",:type => 'password', :class => 'form-control', :placeholder => 'Пароль' %>
  </div>

  <% if devise_mapping.rememberable? %>
    <div class="checkbox mb-3">
      <%= f.check_box :remember_me %>
      <%= f.label 'Запомнить меня' %>
    </div>
  <% end %>

  <div class="actions">
    <%= f.submit "Войти" , :class => 'w-100 btn btn-lg btn-dark'%>
  </div>
<% end %>
</div>

</main>

<%= render "devise/shared/links" %>


